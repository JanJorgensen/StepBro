{
  "name": "stepbro-vscode-debug-adapter",
  "displayName": "StepBro VSCode Debug Adapter",
  "description": "VSCode Debug Adapter for the StepBro Language",
  "publisher": "SchmutStein",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.83.0"
  },
  "categories": [
    "Debuggers"
  ],
  "author": {
    "name": "Schmutstein"
  },
  "license": "MIT",
  "activationEvents": [
    "onCommand:stepbro-vscode-debug.startSession"
  ],
  "main": "./out/typescript/extension.js",
  "contributes": {
    "configuration": {
        "type": "object",
        "title": "%configuration.title%",
        "properties": {
            "mono-debug.exceptionOptions": {
                "type": "object",
                "additionalProperties": {
                    "type": "string",
                    "enum": [
                        "never",
                        "always",
                        "unhandled"
                    ],
                    "enumDescriptions": [
                        "%breakMode.never%",
                        "%breakMode.always%",
                        "%breakMode.unhandled%"
                    ],
                    "description": "%configuration.exceptionOptions.description2%",
                    "default": "never"
                },
                "description": "%configuration.exceptionOptions.description%",
                "default": {
                    "System.Exception": "never",
                    "System.SystemException": "never",
                    "System.ArithmeticException": "never",
                    "System.ArrayTypeMismatchException": "never",
                    "System.DivideByZeroException": "never",
                    "System.IndexOutOfRangeException": "never",
                    "System.InvalidCastException": "never",
                    "System.NullReferenceException": "never",
                    "System.OutOfMemoryException": "never",
                    "System.OverflowException": "never",
                    "System.StackOverflowException": "never",
                    "System.TypeInitializationException": "never"
                }
            }
        }
    },
    "commands": [
    ],
    "breakpoints": [
        {
            "language": "stepbro"
        }
    ],
    "debuggers": [
        {
            "type": "stepbro",
		    "label": "StepBro",
			"program": "./bin/Release/stepbro-debug-adapter.exe",
            "startSessionCommand": "extension.mono-debug.startSession"
        }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/typescript/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.83.0",
    "@types/glob": "^8.0.1",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@typescript-eslint/eslint-plugin": "^5.49.0",
    "@typescript-eslint/parser": "^5.49.0",
    "eslint": "^8.33.0",
    "glob": "^8.1.0",
    "mocha": "^10.1.0",
    "typescript": "^4.9.4",
    "@vscode/test-electron": "^2.2.2"
  }
}
