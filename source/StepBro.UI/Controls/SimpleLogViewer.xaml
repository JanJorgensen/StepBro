<UserControl x:Class="StepBro.Core.Controls.SimpleLogViewer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:StepBro.Core.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <ListView x:Name="LogEntryList">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Timestamp" Width="70"></GridViewColumn>
                    <GridViewColumn Header="Type" Width="70"></GridViewColumn>
                    <GridViewColumn Header="Message" Width="440"></GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</UserControl>
